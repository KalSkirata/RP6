<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.ziri.rp6_wifi.MainActivity"
    android:clickable="true">

    <Button
        android:id="@+id/connexion"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:background="@drawable/connex"
        android:onClick="onClick"
        android:layout_alignParentStart="true"
        android:text="@string/connexion"
        android:textSize="14dp"
        android:textColor="#ffffff">
    </Button>

    <Button
        android:id="@+id/deconnexion"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:background="@drawable/connex"
        android:onClick="onClick"
        android:text="deconnexion"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/connexion"
        android:layout_alignParentEnd="true">
    </Button>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/left"
        android:id="@+id/left"
        android:layout_alignTop="@+id/right"
        android:layout_toStartOf="@+id/up"
        android:onClick="onClick"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/up"
        android:id="@+id/up"
        android:layout_above="@+id/left"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/right"
        android:id="@+id/right"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/up"
        android:onClick="onClick"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/down"
        android:id="@+id/down"
        android:layout_below="@+id/left"
        android:layout_toEndOf="@+id/left"
        android:onClick="onClick"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/stop1"
        android:id="@+id/stop"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/batterie"
        android:indeterminate="false"
        android:progress="5"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/deconnexion"
        android:layout_alignParentStart="true"
        android:clickable="false" />

</RelativeLayout>
